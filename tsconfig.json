{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "esnext",
        "allowSyntheticDefaultImports": true,
        "target": "esnext",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": [
            "es2015",
            "dom",
            "es2015.promise"
        ],
        "typeRoots": [
            "./typings/",
            "./node_modules/@types/"
        ]
    },
    "include": [
        "./src/*"
    ]
}