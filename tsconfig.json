{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitAny": false,
        "module": "esnext",
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": [
            "es2017",
            "dom",
            "es2015.promise"
        ],
        "typeRoots": [
            "./src/@types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "./src/*"
    ]
}